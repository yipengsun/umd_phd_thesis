%%%%%%%%%%%%%%
% Title page %
%%%%%%%%%%%%%%

\defbeamertemplate*{title page}{UMDPepsi}[1][]{

	% Red Pepsi strip
	\begin{beamercolorbox}{}
		\begin{tikzpicture}[relative to page]
			\fill[PepsiRed] (page cs:-1,-0.6) rectangle (page cs:1,1);
		\end{tikzpicture}
	\end{beamercolorbox}

	% Title
	\begin{beamercolorbox}{title page header}
		\begin{tikzpicture}[relative to page]
			\node[font=\huge, align=center, text width=\textwidth]
			(title) at (page cs:0,0.6) {\inserttitle};
		\end{tikzpicture}
	\end{beamercolorbox}

	% Author
	\begin{beamercolorbox}{author}
		\begin{tikzpicture}[relative to page]
			\node[anchor=south, font=\normalsize, text width=0.8\textwidth,
				align=center, below=1.2em of title]
			(authors) {\insertauthor};
		\end{tikzpicture}
	\end{beamercolorbox}

	% Date
	\begin{beamercolorbox}{institute}
		\begin{tikzpicture}[relative to page]
			\node[font=\small, align=center, text width=0.7\textwidth]
			(date) at (page cs:0,-0.49) {\insertdate};
		\end{tikzpicture}
	\end{beamercolorbox}

	% Institute
	\begin{beamercolorbox}{institute}
		\begin{tikzpicture}[relative to page]
			\node[anchor=north, font=\normalsize, text width=0.6\textwidth,
				align=center, above=0.3em of date]
			(institute) {\insertinstitute};
		\end{tikzpicture}
	\end{beamercolorbox}

	% Blue Pepsi strip
	\begin{beamercolorbox}{}
		\begin{tikzpicture}[relative to page]
			\fill[PepsiBlue] (page cs:-1,-1) rectangle (page cs:1,-0.59);
		\end{tikzpicture}
	\end{beamercolorbox}

	% LHCb logo
	\begin{beamercolorbox}{}
		\begin{tikzpicture}[relative to page]
			\node[anchor=west] at (page cs:-0.99,-0.8)
			(lhcb_logo)
			{\includegraphics[height=3.5em]{logo/lhcb_logo.png}};
		\end{tikzpicture}
	\end{beamercolorbox}

	\if@doCernLogo

		% CERN logo
		\begin{beamercolorbox}{}
			\begin{tikzpicture}[relative to page]
				\node[anchor=east] at (page cs:0.99,-0.8)
				(cern_logo)
				{\includegraphics[height=3.5em]{logo/cern_logo.png}};
			\end{tikzpicture}
		\end{beamercolorbox}

		% UMD logo
		\begin{beamercolorbox}{}
			\begin{tikzpicture}[relative to page]
				\node[anchor=east, left=0.15em of cern_logo]
				(umd_logo)
				{\includegraphics[height=3.5em]{logo/umd_logo.png}};
			\end{tikzpicture}
		\end{beamercolorbox}

	\else

		% UMD logo
		\begin{beamercolorbox}{}
			\begin{tikzpicture}[relative to page]
				\node[anchor=east] at (page cs:0.99,-0.8)
				(umd_logo)
				{\includegraphics[height=3.5em]{logo/umd_logo.png}};
			\end{tikzpicture}
		\end{beamercolorbox}
	\fi

}

